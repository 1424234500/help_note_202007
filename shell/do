function stop(){
    echo 'stop'
}
function start(){
    do_start_sftware_start $@
}
function rename(){
    renames_rename $@
}
function showdir(){
    dirfile_init $@
}
# 转变c sh文件为unix模式crlf -> lf
function turn(){
    find $_help -type f | grep -v .git | grep '^.*\(\(\.c\)\|\(\.sh\)\)$' | xargs dos2unix
}
function clean(){
    cleanjava $@
    cleanpython $@
}
function cleanjava(){
    clean_cleanJava $@
}
function cleanpython(){
    clean_clean $@
}

function do_main(){ 
    echo
    toolsShow $@
    ##########################do something yourself
    do_init $@
    ##########################
    toolsLineLong 
    echo
}

function do_init(){  
    method=$1
    if [[ "$method" != "" ]]
    then 
        rootParams=($@)   
        params=(${rootParams[@]:1}) 
        toolsShowMethod $method "${params[*]}"
        #echo ${params[@]}
        $method ${params[@]}
    else
        echo 'eg:'
        echo './do test "params of test"'
    fi
}


function show(){  
    echo '$0'">>"$0
    echo '$*'">>"$*
    echo '$@'">>"$@    
    echo '$#'">>"$# 
    echo '$$'">>"$$ 
}


 
#start
do_main $@

